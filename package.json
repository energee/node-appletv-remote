{
  "name": "node-appletv-remote",
  "version": "0.3.0",
  "description": "Pure Node.js Apple TV remote control library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && rm -rf dist/proto && cp -r src/proto dist/proto",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "bin": {
    "atv": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "!dist/**/__tests__",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "apple-tv",
    "appletv",
    "airplay",
    "remote",
    "media-remote",
    "mrp",
    "homekit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/energee/node-appletv-remote.git"
  },
  "bugs": {
    "url": "https://github.com/energee/node-appletv-remote/issues"
  },
  "homepage": "https://github.com/energee/node-appletv-remote#readme",
  "license": "MIT",
  "dependencies": {
    "@noble/ciphers": "^1.3.0",
    "bonjour-service": "^1.3.0",
    "bplist-creator": "^0.1.1",
    "bplist-parser": "^0.3.2",
    "fast-srp-hap": "^2.0.4",
    "protobufjs": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
